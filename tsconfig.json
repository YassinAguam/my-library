{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "types": ["jest"],
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}